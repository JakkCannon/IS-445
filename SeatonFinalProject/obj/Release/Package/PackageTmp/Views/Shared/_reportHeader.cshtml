<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<script>
    $(document).ready(function () {

        $('#criteria').hide();

        $("select").change(function(){
            
            $( "select option:selected").each(function(){
                if($(this).attr("value")=="5"){
                    $("#criteria").show();
                }
                if($(this).attr("value")!=="5"){
                    $("#criteria").hide();
                }
            });
        }).change();
    });
</script>

<h2>Reports</h2>

@using (Html.BeginForm())
{
    <p>
        Select Report
        <select id="report" name="report">
            <option value="1">All Customers - Sorted by Customer Name</option>
            <option value="2">All Customers - Sorted by Current Total Sales Decreasing</option>
            <option value="3">Control Break Report - By State showing each States Total and Grand Total at End</option>
            <option value="4">Customers with Current Year Total Sales Highest and Lowest Amounts</option>
            <option value="5">Criteria Report - List Customers and Totals (This Year and Previous)</option>
            <option value="6">Three Random Customers - Promotional Giveaway (Not Repeating)</option>
        </select>
    </p>
    <div id="criteria" class="form-horizontal">
        <br />
        <div class="form-group">
            <div class="col-md-2"><b>State</b></div>
            <div class="col-md-10"><input type="text" name="state" class="form-control" /></div>
        </div>
        <div class="form-group">
            <div class="col-md-2"><b>Current Year Sales Less than or equal to</b></div>
            <div class="col-md-10"><input type="text" name="sales" class="form-control" /></div>
        </div>
    </div>
    <input type="submit" value="Run Report" class="btn btn-default" />
}
