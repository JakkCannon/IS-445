<script src="~/Scripts/jquery-1.10.2.min.js"></script>

@model SeatonFinalProject.Models.Customer

@{
    ViewBag.Title = "Export Customer List";
}

<script>
    $(document).ready(function () {
        
        $('#sales').hide();

        $('input[type="radio"]').click(function () {


            if ($(this).attr("value") == "Entire List") {
                $("#sales").hide();
            }

            if ($(this).attr("value") == "Criteria") {
                $("#sales").show();
            }
        });
    });

</script>

<h2>Export</h2>
<p>Total Number of Records in the Database: @ViewBag.totRecords</p>
@using (Html.BeginForm())
{
    <p class="form-horizontal">


        <div class="form-group">
            <div class="col-md-2"><b>Enter File Name: </b></div >
            <div class="col-md-10">
                @Html.TextBox("fileName", "", new { @class = "form-control" })
            </div>
        </div>
        <br /><br />
        <div class="col-md-2"><b>Export Type: </b></div>

            <div class="form-group col-md-10">
                <input id="entireList" type="radio" name="export" value="Entire List" checked="checked" /> Entire List<br>
                <input id="criteria " type="radio" name="export" value="Criteria" /> Criteria<br>
                <div id="sales" class="col-md-4">Current Years Sales less than or equal to: @Html.TextBox("exportSales", "", new { @class = "form-control" })</div>
            </div>


            <div class="col-md-2"></div>
        <div class="form-group col-md-10">
            <input type="checkbox" name="alsoDelete" class="checkbox" />Delete Records from Database
        </div>
            <br />
            <div class="col-md-2"></div>
            <br />
            <input type="submit" value="Export Data" class="btn btn-default" />


</p>
}


@if (ViewBag.exportStatus != null)
{
    <h3>@ViewBag.exportStatus</h3>
}
